                  +e.table
                    +caption-row()
                    +grad-row('pink', '.analityc-graphics-bars__line-fill_red', '.legend-icon-a__circle_red', '.legend-icon-a__icon_red')
                    +grad-row('violet', '.analityc-graphics-bars__line-fill_pink', '.legend-icon-a__circle_violet', '.legend-icon-a__icon_violet')
                    +grad-row('blue', '.analityc-graphics-bars__line-fill_altblue', '.legend-icon-a__circle_blue', '.legend-icon-a__icon_blue')
                    +grad-row('green', '.analityc-graphics-bars__line-fill_green', '.legend-icon-a__circle_greenyellow', '.legend-icon-a__icon_greenyellow')
                    +grad-row('grey', '.analityc-graphics-bars__line-fill_grey', '.legend-icon-a__circle_gray')
                    +grad-row('altgreen', '.analityc-graphics-bars__line-fill_lightgreen', '.legend-icon-a__circle_green')
                    +grad-row('orange', '.analityc-graphics-bars__line-fill_yellow', '.legend-icon-a__circle_yellow', '.legend-icon-a__icon_yellow')
                    +line-row('grey', '.growth-rate_grey', '.legend-icon-a__line_grey')
