extends ../../layouts/default
include ../../blocks/page-head/page-head

block head
  - var pageTitle = 'Таблица цветов'

block page
  block header
    +header()._budget

  block sections
    +sections()

      block content
      
        // ----------------------//
        
        mixin caption-row()
          +e.row
            +e.col._caption
              p Градиент / линия
            +e.col._caption
              p Название
            +e.col._big._caption
              p Класс
              +e.row
                +e.col._sub
                  p График
                +e.col._sub
                  p Легенда
                
              
        mixin grad-row(name, text1, text2, text22)
          +e.row
            +e.col
              +e.grad(class='_'+name)
            +e.col
              p= name
            +e.col._big
              +e.col._sub
                p= text1
              +e.col._sub
                p= text2
                  br
                  = text22
                  
        mixin line-row(name, text1, text2, text22)
          +e.row
            +e.col
              +e.line(class='_'+name)
            +e.col
              p= name
            +e.col._big
              +e.col._sub
                p= text1
              +e.col._sub
                p= text2
                  br
                  = text22
              
        // ----------------------//

        section.main.basic-budget.section__item
          .wrapper-header
            +page-head('Таблица цветов')
          .wrapper
            .analityc-widget.load-anim-fade(data-delay="1500")
            
              +b.color-table
                +e.note * - нет класса, цвет задается через скрипт
                //
                +e.block
                  +e.UL.heading-list
                    li Бюджет Москвы - Основные показатели бюджета
