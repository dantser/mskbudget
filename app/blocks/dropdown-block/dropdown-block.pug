include ../../components/doc-cards/doc-cards
include ../../blocks/news-card/news-card
include ../../components/lk-services/lk-services

mixin dropdown()
  .dropdown-block
    .dropdown
      .dropdown-trigger
        .wrapper
          span
            strong Документы
      .dropdown-content
        .wrapper
          +doc-cards(getData('doc-cards'))
    .dropdown
      .dropdown-trigger
        .wrapper
          span
            strong Новости по&nbsp;теме
      .dropdown-content
        .wrapper
          .dropdown__card-wrapper
            .tile__item(data-filter="budget").active
              +news-card(1, 'Новости бюджета', 'Подведены итоги предварительной апробации федеральной учебной программы «Бюджетная грамотность для старшеклассников»', '8 августа 2016')._blue._big.tile__inner
            .tile__item(data-filter="moscow").active
              +news-card(2, 'Новости Москвы', 'О выплатах купонного дохода по облигациям Городского облигационного (внутреннего) займа Москвы', '5 августа 2016')._red._big.tile__inner
            .tile__item(data-filter="federal").active
              +news-card(3, 'Федеральные новости', 'Итоги исполнения бюджета города Москвы за первое полугодие 2016 года', '1 августа 2016')._green._big.tile__inner
    .dropdown
      .dropdown-trigger
        .wrapper
          span
            strong Сервисы
      .dropdown-content
        .wrapper
          +lk-services()
