include ../icon/icons
include ../checkbox/checkbox


mixin legend(data)
  +b.legend&attributes(attributes)
    each obj in data
      +e.P(class="__item_"+obj.color+"")
        SPAN= obj.title

mixin legend-checkbox(data)
  +b.legend._checkbox&attributes(attributes)
    each obj in data
      +b.LABEL.checkbox._active&attributes(attributes)(data-name=obj.name)
        +e.INPUT(type='checkbox', name=obj.name, value='yes', checked).control
        +e.box
          +icon('icon-ok-ch').mark
        p(class="legend__item_"+obj.color+"").legend__item.legend__item_active= obj.title

mixin legend-basket(data)
  +b.legend._basket&attributes(attributes)
    each obj in data
      if obj.icon
        +e.P(class="__item_icon _"+obj.color+"", data-name=obj.name)
          +e.icon(class="_"+obj.color+"")
          span= obj.title
            +e.A(href="#").remove
              +icon('basket').remove-icon
      else
        +e.P(class="__item_"+obj.color+"", data-name=obj.name)
          span= obj.title
            +e.A(href="#").remove
              +icon('basket').remove-icon
      
