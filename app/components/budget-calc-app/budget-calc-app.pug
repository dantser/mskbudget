mixin budget-calc-btn(text)
  +b.A.budget-calc-btn(href="#")&attributes(attributes) #{text}

mixin budget-calc-app()
  +b.budget-calc-app#budget-calc-app
    +e.sidebar
      +b.A.budget-calc-app-widget._link._incomes.js-budget-calc-app__tab-control.is-active(data-target="#budget-calc-app__tab_incomes" href="#")
        +e.DIV.inner
          +e.DIV.name доходы
          +e.DIV.value 1 598,9
          +e.DIV.value-notice млрд. руб.
          +e.DIV.description Исходное значение: 1 598,9
      +b.A.budget-calc-app-widget._link._costs.js-budget-calc-app__tab-control(data-target="#budget-calc-app__tab_costs" href="#")
        +e.DIV.inner
          +e.DIV.name расходы
          +e.DIV.value 1 751,0
          +e.DIV.value-notice млрд. руб.
          +e.DIV.description Исходное значение: 1 751,0
      +b.A.budget-calc-app-widget._link._balance.js-budget-calc-app__tab-control(data-target="#budget-calc-app__tab_balance" href="#")
        +e.DIV.inner
          +e.DIV.name дефицит/профицит
          +e.DIV.value -151,1
          +e.DIV.value-notice млрд. руб.
          +e.DIV.description 9,5% от собственных доходов <br>Исходное значение: -152,1
      +b.budget-calc-app-widget._not-balanced
        +e.inner
          +e.name не сбалансировано
          +e.value 0,0
          +e.value-notice млрд. руб.
          +e.description text here
      +b.budget-calc-app-widget._check
        +e.inner
          +e.name проверить свой вариант бюджета
      +b.budget-calc-app-widget._restore
        +e.inner
          +e.name вернуть исходные значения бюджета

    +e.main-content#budget-calc-app__main-content
      +e.tab._incomes.js-budget-calc-app__tab#budget-calc-app__tab_incomes.is-active
        +e.heading МЕРЫ ПО ИЗМЕНЕНИЮ ДОХОДНОЙ ЧАСТИ БЮДЖЕТА
        +e.text Изменение элементов налогообложения в пределах полномочий субъекта Российской Федерации, установленных законодательством Российской Федерации о налогах и сборах.
        +e.incomes
          +e.incomes-row._heading
            +e.incomes-column
            +e.incomes-column._heading Доля в общем объеме доходов
            +e.incomes-column._heading Сумма поступлений
          +e.incomes-row.is-active
            +e.incomes-column testing
            +e.incomes-column testing
            +e.incomes-column testing
          +e.incomes-row
            +e.incomes-column Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellendus illo placeat labore nobis commodi, facilis, hic animi vitae est id consectetur cumque itaque ipsum, soluta! Iusto illo id, officia et!
        +e.text
          +budget-calc-btn('сохранить и перейти в раздел «расходы»')

      +e.tab._costs.js-budget-calc-app__tab#budget-calc-app__tab_costs
        +e.heading РАСХОДЫ НА ГОСУДАРСТВЕННЫЕ ПРОГРАММЫ
        +e.costs
          each _ in Array(15)
            +e.costs-item
              +e.costs-item-icon icon
              +e.A.costs-item-link(href="#") РАЗВИТИЕ ТРАНСПОРТНОЙ СИСТЕМЫ
              +e.costs-item-value
                span 464 732,0
                |  млн руб.
              +e.costs-item-initial
                | Исходное значение:
                span 71 271,9
              +e.costs-item-range
              +e.costs-item-expand testing
        +budget-calc-btn('сохранить и перейти в раздел «дефицит/процифит»')._costs

      +e.tab._balance.js-budget-calc-app__tab#budget-calc-app__tab_balance
        +e.heading ДЕФИЦИТ / ПРОФИЦИТ
        +e.balance
          each _ in Array(5)
            +e.balance-row
              +e.balance-column._name
                | ГОСУДАРСТВЕННЫЕ ЦЕННЫЕ БУМАГИ
              +e.balance-column._range
                | range
              +e.balance-column._value
                | 0,0 млн руб.
              +e.balance-expand
                | Уведомления
        +budget-calc-btn('Сохранить и проверить свой вариант бюджета')._balance
