include ../page-header/page-header
include ../../blocks/button/button

mixin depfin-budget-moscow-media-materials()

	//- Карточка материала
	//- type - тип 'photo', 'video', 'present'
	//- img - название фото: item1, item2, item3, item4
	mixin card(type, img, isSlide)

		if isSlide
			- var link = null;
		else
			-var link = 'href="#"';

		+e.item&attributes(attributes)
			+e.A(link).link
				+e.photo
					+e.IMG(src= 'assets/images/depfin-budget-moscow-media-materials/' + img + '.jpg').img

					case type
						when 'photo'
							+e.paginate
								+e.paginate-bullets
									+e.bullet._active
									+e.bullet
									+e.bullet
						when 'video'
							+e.BUTTON.play
								+icon('angle-arrow-slim')
						when 'present'
							+e.slide
								+e.slide-arrows
									+icon('triangle-arrow').prev
									+icon('triangle-arrow').next

				+e.label
					+e.P.text Возле лужников появится кафе с фонтаном-принтером.
					+e.SPAN.date 1 апреля 2016

	+b.depfin-budget-moscow-media-materials&attributes(attributes)
		.wrapper.page-content-wrapper

			+e.head
				+page-header('Медиаматериалы', false, true)

			+e.main

				//- Главная

				+e.SECTION.materials._photo
					+e.H3.title Фотографии
					+e.content
						+card('photo', 'item1')
						+card('photo', 'item2')
						+card('photo', 'item3')
						+card('photo', 'item4')
					+e.more
						+button()._kind_transparent
							| Показать еще

				+e.SECTION.materials._video
					+e.H3.title Видео
					+e.content
						+card('video', 'item1')
						+card('video', 'item2')
						+card('video', 'item3')
						+card('video', 'item4')
					+e.more
						+button()._kind_transparent
							| Показать еще

				+e.SECTION.materials._present
					+e.H3.title Презентации
					+e.content
						+card('present', 'item1')
						+card('present', 'item2')
						+card('present', 'item3')
						+card('present', 'item4')
					+e.more
						+button()._kind_transparent
							| Показать еще

				//- Переход по кнопке Показать еще

				+e.SECTION.materials._photo
					+e.H3.title Фотографии
					+e.content
						+card('photo', 'item1')
						+card('photo', 'item2')
						+card('photo', 'item3')
						+card('photo', 'item4')
						+card('photo', 'item1')
						+card('photo', 'item2')
						+card('photo', 'item3')
						+card('photo', 'item4')
						+card('photo', 'item1')
						+card('photo', 'item2')
						+card('photo', 'item3')
						+card('photo', 'item4')
					+e.more
						+button()._kind_transparent
							| Показать еще

				+e.SECTION.materials._video
					+e.H3.title Видео
					+e.content
						+card('video', 'item1')
						+card('video', 'item2')
						+card('video', 'item3')
						+card('video', 'item4')
						+card('video', 'item1')
						+card('video', 'item2')
						+card('video', 'item3')
						+card('video', 'item4')
						+card('video', 'item1')
						+card('video', 'item2')
						+card('video', 'item3')
						+card('video', 'item4')
					+e.more
						+button()._kind_transparent
							| Показать еще

				//- Слайдер

				+e.SECTION.materials._photo._view

					.swiper-slider
						+e.slider.swiper-container.gallery-top
							+e.content.swiper-wrapper
								+card('photo', 'item1', true).swiper-slide
								+card('photo', 'item2', true).swiper-slide
								+card('photo', 'item3', true).swiper-slide
								+card('photo', 'item4', true).swiper-slide
							+icon('icon-prev').slider-prev.swiper-button-prev
							+icon('icon-next').slider-next.swiper-button-next

					+e.slider.swiper-container.gallery-thumbs
						+e.content.swiper-wrapper
							+card('photo', 'item1', true).swiper-slide
							+card('photo', 'item2', true).swiper-slide
							+card('photo', 'item3', true).swiper-slide
							+card('photo', 'item4', true).swiper-slide
