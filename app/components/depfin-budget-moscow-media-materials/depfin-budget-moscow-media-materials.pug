	mixin card(type, img, viewMode)

		if viewMode
			- var view = '_view';
		else
			-var view = '';

		+e.LI(class= 'item' + view)&attributes(attributes)
			+e.A(href='#').link
				+e.photo
					+e.IMG(src= 'assets/images/depfin-budget-moscow-media-materials/' + img + '.jpg').img

					if !viewMode
						case type
							when 'photo'
								+e.paginate
									+e.paginate-bullets
										+e.bullet._active
										+e.bullet
										+e.bullet
							when 'video'
								+e.BUTTON.play
									+icon('angle-arrow-slim')
							when 'present'
								+e.slide
									+e.slide-arrows
										+icon('triangle-arrow').prev
										+icon('triangle-arrow').next

				+e.label
					+e.P.text Возле лужников появится кафе с фонтаном-принтером.
					+e.SPAN.date 1 апреля 2016

