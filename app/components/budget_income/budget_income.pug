include ../page-header/page-header
include ../analityc-widgethead/analityc-widgethead
include ../analityc-graphics/analityc-graphics
include ../../blocks/table/table

mixin budget_income()
  .main._basic
    section.basic-budget
      .wrapper
        +page-header('Доходы бюджета', false, true)

        // Tab 1
        .analityc-widget.analityc-widget_income
          +analityc-widgethead-income()
          +analityc-graphics-round('income1')._approved.active
          +table-income(getData('income')).analityc-table_approved
          +analityc-graphics-column('income1')._changes
          +table-income(getData('income1')).analityc-table_changes
          +analityc-graphics-singleround('income2')._done
          +table-income(getData('income2')).analityc-table_done
          +analityc-graphics-line('Исполнение доходов бюджета на 22.04.2017', getData('graphic-lines-income1'))._date-one
          +table-income(getData('income3')).analityc-table_date
          +analityc-graphics-line('Исполнение доходов бюджета на 1 февраля 2017', getData('graphic-lines-income2'))._date-two
          a(href="/").analityc-more Перейти в&nbsp;раздел аналитика

      // Dropdown block
      .dropdown-block
        .dropdown
          .dropdown-trigger
            .wrapper
              span
                strong Документы
          .dropdown-content
            .wrapper
              span Документы
        .dropdown
          .dropdown-trigger
            .wrapper
              span
                strong Новости по&nbsp;теме
          .dropdown-content
            .wrapper
              span Новости
        .dropdown
          .dropdown-trigger
            .wrapper
              span
                strong Сервисы
          .dropdown-content
            .wrapper
              span Сервисы
