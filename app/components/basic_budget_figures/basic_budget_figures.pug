include ../page-header/page-header
include ../../blocks/dropdown-block/dropdown-block
include ../../blocks/selectbox/selectbox

mixin basic_budget_figures()
  section.main._basic.section__item.basic-budget
    .wrapper-header
      +page-header('Основные показатели бюджета', ['Бюджет Москвы'], true)
      .article-controls
        span
        span
        span

    .wrapper
      .analityc-widget.analityc-widget_figures.load-anim-fade(data-delay="1500")
        .analityc-control-group._year
          span Год
          +selbox('year', '2017')._cgroup.analityc-widget__selectbox
            +selbox-opt('2017', '2017', true)
            +selbox-opt('2016', '2016')
            +selbox-opt('2015', '2015')
        .analityc-control-group._stage
          span Этап
          +selbox('stage', 'Закон о бюджете первоначальный')._cgroup.analityc-widget__selectbox
            +selbox-opt('first', 'Закон о бюджете первоначальный', true)
            +selbox-opt('changes', 'Закон о внесении изменений')
            +selbox-opt('done', 'Закон об исполнении')
            +selbox-opt('date', 'Исполнение на дату')
        .analityc-control-group._level
          span Уровень
          +selbox('level', 'Бюджет москвы')._cgroup.analityc-widget__selectbox
            +selbox-opt('moscow', 'Бюджет москвы', true)
            +selbox-opt('consolidated', 'Консолидированный бюджет')
            +selbox-opt('region', 'Бюджет региона')
        .analityc-control-group._transfer
          span Межбюджетные трансферы
          +selbox('transfer', 'Без межбюджетных трансфертов')._cgroup.analityc-widget__selectbox
            +selbox-opt('no', 'Без межбюджетных трансфертов', true)
            +selbox-opt('yes', 'с трансфертами')
        .analityc-control-group._dp.basic-budget__dp(data-stage='date', data-level='moscow, regions')
          input(placeholder="Выберите дату исполнения", value="Выберите дату исполнения", readonly).jq-spec-datepicker-one
          input(type='hidden', name='selecteddate')
        .analityc-control-group._dp.analityc-control-group._dp-alt.basic-budget__dp(data-stage='date', data-level='consolidated')
          +selbox('day', '01', 'disabled')._cgroup._disabled.analityc-widget__selectbox._alt._day
            +selbox-opt('01', '01', true)
          +selbox('month', 'января')._cgroup.analityc-widget__selectbox._alt._month
            +selbox-opt('jan', 'января', true)
            +selbox-opt('feb', 'февраля')
            +selbox-opt('mar', 'марта')
            +selbox-opt('apr', 'апреля')
            +selbox-opt('may', 'мая')
            +selbox-opt('jun', 'июня')
            +selbox-opt('jul', 'июля')
            +selbox-opt('aug', 'августа')
            +selbox-opt('sep', 'сентября')
            +selbox-opt('oct', 'октября')
            +selbox-opt('nov', 'ноября')
            +selbox-opt('dec', 'декабря')
          +selbox('year', '2015')._cgroup.analityc-widget__selectbox._alt._year
            +selbox-opt('2014', '2014')
            +selbox-opt('2015', '2015', true)
            +selbox-opt('2016', '2016')
            +selbox-opt('2017', '2017')
            +selbox-opt('2018', '2018')
        span.analityc-widget-label млрд. рублей
        .analityc-widget-rounds(data-stage='first')._active
          .legend
            p.legend__item.legend__item_blue доходы
            p.legend__item.legend__item_pink расходы
            p.legend__item.legend__item_green дефицит/профицит
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-1")
              a(href="#" title="Диаграмма 2017 год")
              p.comp-diagram__year 2017
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-2")
              a(href="#" title="Диаграмма 2018 год")
              p.comp-diagram__year 2018
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-3")
              a(href="#" title="Диаграмма 2019 год")
              p.comp-diagram__year 2019
        .analityc-widget-rounds(data-stage='done, date')
          .analityc-widget-item._incoming.large-diagram_income
            span.large-diagram__caption
              strong доходы
            .large-diagram__svg(id="diagram-4")
          .analityc-widget-item._outlay.large-diagram_expenses
            span.large-diagram__caption
              strong расходы
                span.yellow *
            .large-diagram__svg(id="diagram-5")
            p.large-diagram__note
              span.yellow *
              | без учета возвратов неиспользованных средств
        .analityc-widget-rounds(data-stage='changes')
          .legend
            p.legend__item.legend__item_blue доходы
            p.legend__item.legend__item_pink расходы
            p.legend__item.legend__item_green дефицит/профицит
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-01")
              a(href="#" title="Диаграмма 2017 год")
              p.comp-diagram__year 2017
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-02")
              a(href="#" title="Диаграмма 2018 год")
              p.comp-diagram__year 2018
          .analityc-widget-item
            .comp-diagram.comp-diagram_dash-1(id="diagram-03")
              a(href="#" title="Диаграмма 2019 год")
              p.comp-diagram__year 2019
        a(href="/").analityc-more Перейти в&nbsp;раздел аналитика
    +dropdown().load-anim-fade(data-delay="1700")
