include ../page-header/page-header
include ../../blocks/icon/icons
include ../../blocks/link/link


mixin depfin-services-social-support()
  +b.depfin-services-social-support&attributes(attributes)
    .wrapper.page-content-wrapper
      +e.head
        +page-header('Социальная поддержка населения', 'Сервисы')

      +e.main

        //- 01, 02
        +e.UL.list

          - for (var i = 0; i < 12; i++)
            +e.LI.item
              +e.A(href='#').item-link
                +e.item-icon
                  +e.IMG(src='assets/images/depfin-services-social-support/item.png')
                +e.SPAN.item-text Дети-сироты и их опекуны (усыновители)

              +e.UL.sublist
                +e.LI.subitem
                  +e.A(href='#').subitem-link Молодые семьи
                +e.LI.subitem
                  +e.A(href='#').subitem-link Многодетные семьи
                +e.LI.subitem
                  +e.A(href='#').subitem-link Малоимущие семьи

        +e.SECTION.tab
          +e.H3.title Различные пособия семьям с детьми; Услуги, предоставляемые семьям и детям

          //- 03
          +e.UL.submenu
            - for (var i = 0; i < 11; i++)
              +e.LI.submenu-item
                +e.A(href='#').submenu-link Ежемесячная компенсационная выплата на возмещение роста стоимости продуктов питания отдельным категориям граждан на детей в возрасте до трех лет

          //- 04
          +e.ARTICLE.article
            +e.burger
              +icon('burger').burger-icon
              +icon('close').burger-close

              +e.UL.burger-menu
                - for (var i = 0; i < 12; i++)
                  +e.LI.burger-item
                    +e.A(href='#').burger-link
                      | Ежемесячная компенсационная выплата на возмещение роста стоимости продуктов питания отдельным категориям граждан на детей в возрасте до трех лет

            +e.content
              +e.H4.content-title Пособие по беремености и родам
              +e.info
                +e.left
                  +e.P.definition
                    != '<b class="depfin-services-social-support__bold">Пособие по беременности</b> - это денежная выплата, положенная беременной женщине'
                +e.right
                  +e.UL.types

                    +e.LI.type._active
                      +e.type-label
                        +link()._dashed
                          | В размере среднего заработка
                          +icon('close').icon
                      +e.type-description
                        +e.type-text  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ex possimus, ea, ullam debitis eos porro nemo labore itaque delectus culpa praesentium accusantium explicabo dignissimos cupiditate laudantium, esse quod sit atque!
                        +e.A(href='#').type-link Федеральный закон от 19 05 1995 №81-ФЗ

                    +e.LI.type
                      +e.type-label
                        +link()._dashed
                          | В размере среднего заработка
                          +icon('close').icon
                      +e.type-description
                        +e.type-text  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ex possimus, ea, ullam debitis eos porro nemo labore itaque delectus culpa praesentium accusantium explicabo dignissimos cupiditate laudantium, esse quod sit atque!
                        +e.A(href='#').type-link Федеральный закон от 19 05 1995 №81-ФЗ

                    +e.LI.type
                      +e.type-label
                        +link()._dashed
                          | В размере среднего заработка
                          +icon('close').icon
                      +e.type-description
                        +e.type-text  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ex possimus, ea, ullam debitis eos porro nemo labore itaque delectus culpa praesentium accusantium explicabo dignissimos cupiditate laudantium, esse quod sit atque!
                        +e.A(href='#').type-link Федеральный закон от 19 05 1995 №81-ФЗ

          //- 05
          +e.ARTICLE.article
            +e.burger
              +icon('burger').burger-icon
              +icon('close').burger-close

              +e.UL.burger-menu
                - for (var i = 0; i < 12; i++)
                  +e.LI.burger-item
                    +e.A(href='#').burger-link
                      | Ежемесячная компенсационная выплата на возмещение роста стоимости продуктов питания отдельным категориям граждан на детей в возрасте до трех лет

            +e.content
              +e.H4.content-title Единовременно пособие при рождении ребенка
              +e.info
                +e.left
                  +e.P.definition
                    != '<b class="depfin-services-social-support__bold">Единовременное пособие при рождении ребенка</b> - это разовая денежная выплата, положенная женщине, родившей ребенка'
                +e.right
                  +e.UL.types

                    +e.LI.type._active
                      +e.type-label
                        +link()._dashed
                          | 8000 рублей
                          +icon('close').icon
                      +e.type-description
                        +e.type-text  при рождении ребенка
                        +e.A(href='#').type-link Федеральный закон от 19 05 1995 №81-ФЗ


