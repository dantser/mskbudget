mixin depfin-services-social-support()
  +b.depfin-services-social-support&attributes(attributes)
    .wrap
      +e.head
        +page-header('Социальная поддержка населения', ['Сервисы'], true)

      +e.main
        block

mixin depfin-services-social-support-cards-innerpage()
  +depfin-services-social-support()
    +depfin-services-nav-slider()
    +e.SECTION.tab.load-anim-fade(data-delay="1600")
      +e.H3.title Различные пособия семьям с детьми; Услуги, предоставляемые семьям и детям
      block

mixin article-burger-item(link)
  +e.LI.burger-item&attributes(attributes)
    +e.A(href=link).burger-link
      block

mixin article-burger-menu()   
  +e.burger-menu&attributes(attributes)
    +e.UL.burger-list
      block

mixin article-content(title) 
  +e.content&attributes(attributes)
    +e.H4.content-title= title
    +e.info
      block

mixin article-left()
  +e.left&attributes(attributes)
    block

mixin article-right()  
  +e.right&attributes(attributes)
    block

mixin article-accordeon()  
  +e.UL.types&attributes(attributes)
    block
      
mixin article-accordeon-block(linktext, maintext, bluetext)  
  +e.LI.type&attributes(attributes)
    +e.type-label
      +b.link._dashed= linktext
      +icon('close').type-label-close
    +e.type-description
      +e.type-text !{maintext}
      +e.A(href='#').type-link !{bluetext}
      block
        
mixin depfin-services-social-support-articlestructure()        
  +e.ARTICLE.article&attributes(attributes).load-anim-fade(data-delay="1600")
    +e.burger
      +e.burger-button
        span
    block
        
        
        
        










