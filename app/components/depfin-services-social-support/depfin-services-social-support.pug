      +list-item(5, 'Ветераны и инвалиды боевых действий', true)
      +list-item(6, 'реабилитированные лица', true)
      +list-item(7, 'инвалиды', true)
      +list-item(8, 'дети-сироты и их опекуны (усыновители)', true)
      +list-item(9, 'другие меры соцподдержки', true)
      +list-item(10, 'Граждане, имеющие особые награды', true)
      +list-item(11, 'Граждане, имеющие право на льготы', true)
