              +photo-card(3, 'БУТАХИНА Елена Анатольевна', 'Первый заместитель руководителя Департамента финансов города Москвы', '1 апреля 2016').tile__inner 
            .tile__item
              +photo-card(4, 'ГУБАНОВА Светлана Александровна', 'Заместитель руководителя Департамента финансов города Москвы', '1 апреля 2016').tile__inner 
