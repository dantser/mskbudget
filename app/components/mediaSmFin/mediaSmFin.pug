    .wrapper.page-content-wrapper
      +page-header('Материалы для СМИ', ['Открытость'], true)
      +e.content.load-anim-fade(data-delay="1500")
        +e.materials-group
          +e.H3.title Материалы портала Открытый бюджет города Москвы
          +e.card-wrapper
            .tile__item
              +material-card(5, 'Расходы в разрезе государственных программ', '1 апреля 2016')
            .tile__item
              +material-card(6, 'Расходы в разрезе государственных программ', '1 апреля 2016')
            .tile__item
              +material-card(7, 'Расходы в разрезе государственных программ', '1 апреля 2016')
            .tile__item
              +material-card(8, 'Расходы в разрезе государственных программ', '1 апреля 2016')
          +e.A(href="#").show-more.d-si__button_show-more Показать еще
        +e.photos-group
          +e.H3.title Фотографии официальных лиц
          +e.card-wrapper
            .tile__item
              +photo-card(1, 'ЗЯББАРОВА Елена Юрьевна', 'Министр Правительства Москвы, руководитель Департамента финансов города Москвы', '1 апреля 2016').tile__inner 
