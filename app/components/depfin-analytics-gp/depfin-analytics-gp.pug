include ../analityc-graphics/analityc-graphics
include ../analityc-table/analityc-table
include ../../blocks/table/table
include ../../blocks/legend/legend

mixin depfin-analytics-gp()
	.main._basic
		section.basic-budget
			.wrapper.wrapper_gp
				+page-header('Государственнные программы', false, true)

				// Tab 1
				.analityc-widget.analityc-widget_gp
					+analityc-widgethead-gp()

					+analityc-graphics-custom1()

					+analityc-graphics-custom2()

					+analityc-graphics-line-vertical(getData('graphic-lines-gp'), true)._gp

					+legend-icon()
					
					+analityc-table()._gp
						+table-gp(getData('gp'))

			// Dropdown block
			.dropdown-block
				.dropdown
					.dropdown-trigger
						.wrapper
							span
								strong Документы
				.dropdown-content
					.wrapper
						span Документы
				.dropdown
					.dropdown-trigger
						.wrapper
							span
								strong Новости по&nbsp;теме
				.dropdown-content
					.wrapper
						span Новости
				.dropdown
					.dropdown-trigger
						.wrapper
							span
								strong Сервисы
				.dropdown-content
					.wrapper
						span Сервисы