              +b.linear-diagram
                +e.H4.sources_bold Всего по источникам финансирования дефицита
                +e.block
                  +icon('diagram-wave').wave
                  +e.fill
                    +e.SPAN.value 100,0 (45,9%)
                +e.SPAN.val 217,9
              +b.linear-diagram_shares
                +e.H4.sources_violet Средства от продажи акций
                +e.block
                  +e.fill
                    +e.SPAN.value 0,5 (50%)
                +e.SPAN.val 1,0
              +b.linear-diagram_budget-credits
