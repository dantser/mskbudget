include ../../blocks/button/button
include ../favor-list/favor-list
include ../../blocks/image-bg/image-bg
include ../../blocks/text-field/text-field

mixin profile-edit()
  +b.profile.profile_edit&attributes(attributes)
    +e.info

      +e.head
        +e.H3.head-title Редактирование профиля

      +e.main
        +e.photo
          +e.photo-img
            img(src="assets/images/profile/person.jpg")
          +e.A(href='#').photo-edit Изменить фото

        +e.personal
          +e.SPAN.email k.konstantinopolsky@gmail.com

          +e.FORM.profile-form
            +e.field._fio.disabled
              +text-field()._col
                | ФИО
            +e.field._email.disabled
              +text-field()._col
                | E-mail
            +e.SPAN.note Для смены пароля введите старый пароль и дважды новый
            +e.field._pass._old.disabled
              +text-field('password')._col
                | Старый пароль
            +e.field-wrapper
              +e.field._pass._new.disabled
                +text-field('password')._col
                  | Новый пароль
              +e.field._pass._repeat.disabled
                +text-field('password')._col
                  | Повторите новый пароль

            +e.confirm
              +e.change
                +button(true)._kind_yellow
                  | Изменить
              +e.submit
                +button(true)._kind_yellow(data-tab-target="profile")
                  | Сохранить
              +e.cancel
                +button()._kind_transparent(data-tab-target="profile")
                  | Отменить

    //+e.favorite
    +favor-list()
