include ../../blocks/infographic-card/infographic-card
include ../../components/subscribe/subscribe

mixin media-main()
  +b.media-main&attributes(attributes)
    .wrapper.page-content-wrapper
      // News
      +e.SECTION.section._news
        +e.H2.heading Новости
          +e.A(href="#").page-link Все новости
            +icon('angle-arrow').__page-link-icon
        +buttons-set(getData('buttons-set-news'))._news.__buttons-set
        +e.card-wrapper
          +news-card(1, 'Новости бюджета', 'Подведены итоги предварительной апробации федеральной учебной программы «Бюджетная грамотность для старшеклассников»', '8 августа 2016')._blue._big.__news-card(data-filter="budget").active
          +news-card(2, 'Новости Москвы', 'О выплатах купонного дохода по облигациям Городского облигационного (внутреннего) займа Москвы', '5 августа 2016')._red._big.__news-card(data-filter="moscow").active
          +news-card(3, 'Федеральные новости', 'Итоги исполнения бюджета города Москвы за первое полугодие 2016 года', '1 августа 2016')._green._big.__news-card(data-filter="federal").active
        +subscribe()._big.__subscribe
      // Events
      +e.SECTION.section._events
        +e.H2.heading События
          +e.A(href="#").page-link Все события
            +icon('angle-arrow').__page-link-icon
        +e.card-wrapper
          +e.datepicker
          +event-card(2, 'Русский Монмартр и акунинская Москва: бесплатные экскурсии ко дню города!', '1 апреля 2016')._big.__event-card
          +event-card(3, 'Возле лужников появится кафе с фонтаном-принтером', '1 апреля 2016')._big.__event-card
          +event-card(1, 'Русский Монмартр и акунинская Москва: бесплатные экскурсии ко дню города!', '1 апреля 2016')._big.__event-card
      // Infographic
      +e.SECTION.section._infographic
        +e.H2.heading Инфографика
          +e.A(href="#").page-link Вся инфографика
            +icon('angle-arrow').__page-link-icon
        +e.card-wrapper
          +infographic-card(1).A(href="#").__infographic-card
          +infographic-card(2).A(href="#").__infographic-card
          +infographic-card(3).A(href="#").__infographic-card
          +infographic-card(4).A(href="#").__infographic-card
      // Mediamaterials
      +e.SECTION.section._mediamaterials
        +e.H2.heading Медиаматериалы
        +buttons-set(getData('buttons-set-mediamaterials')).__buttons-set
        +e.materials(data-filter="photos").active
          +e.card-wrapper
            +media-card('photo', 'item1', 'Возле лужников появится кафе с фонтаном-принтером.')._photo
            +media-card('photo', 'item2', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._photo
            +media-card('photo', 'item3', 'Возле лужников появится кафе с фонтаном-принтером.')._photo
            +media-card('photo', 'item4', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._photo
          +e.A(href="#").page-link Все фотографии
            +icon('angle-arrow').__page-link-icon
        +e.materials(data-filter="video")
          +e.card-wrapper
            +media-card('video', 'item1', 'Возле лужников появится кафе с фонтаном-принтером.')._video
            +media-card('video', 'item2', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._video
            +media-card('video', 'item3', 'Возле лужников появится кафе с фонтаном-принтером.')._video
            +media-card('video', 'item4', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._video
          +e.A(href="#").page-link Все видео
            +icon('angle-arrow').__page-link-icon
        +e.materials(data-filter="presentations")
          +e.card-wrapper
            +media-card('present', 'item1', 'Возле лужников появится кафе с фонтаном-принтером.')._present
            +media-card('present', 'item2', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._present
            +media-card('present', 'item3', 'Возле лужников появится кафе с фонтаном-принтером.')._present
            +media-card('present', 'item4', 'Русский Монмартр и акунинская Москва: бесплатные экскурсии.')._present
          +e.A(href="#").page-link Все презентации
            +icon('angle-arrow').__page-link-icon
          
          
        
mixin media-card(type, img, title)
  +b.media-card&attributes(attributes)
    +e.A(href='#').link
      +e.photo
        +e.IMG(src='assets/images/depfin-budget-moscow-media-materials/'+img+'.jpg').img
        case type
          when 'video'
            +e.BUTTON.play
              +icon('angle-arrow-slim')
          when 'present'
            +e.slide
              +e.slide-arrows
                +icon('triangle-arrow').prev
                +icon('triangle-arrow').next
      +e.label
        +e.P.text= title
